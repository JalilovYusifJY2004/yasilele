    
 @model List<Blog>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Striped Table</h4>
                  <a asp-action="create" asp-controller="blog" class="btn btn-success"> Create Blog</a>
                  <p class="card-description">
                    <code></code>
                  </p>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                      Image
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                         Description
                          </th>
                          <th>
                       Author
                          </th>
                          <th>
                        ReplayCount
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                   @foreach (Blog blog in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/admin/images/@blog.Image" alt="image" />
                                </td>
                                <td>
                           @blog.Name
                                </td>
                              
                                <td>
                   @blog.Description
                                </td>
                                <td>
                                 @blog.Author
                                </td>
                                <td>
                                    @blog.ReplayCount
                                </td>
                                <td>
                                    <a asp-action="update" asp-controller="blog" asp-route-id="@blog.Id" class="btn btn-info "> <i class="mdi mdi-pen"> </i>> Update</a>
                                    <a asp-action="delete" asp-controller="blog" asp-route-id="@blog.Id" class="btn btn-info "> <i class="mdi mdi-pen"> </i>> Delete</a>
                                    <a asp-action="details" asp-controller="blog" asp-route-id="@blog.Id" class="btn btn-info "> <i class="mdi mdi-pen"> </i>> Details</a>
                                </td>
                            </tr>
                        }
                
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>